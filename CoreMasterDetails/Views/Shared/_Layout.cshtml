<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body class="container">
    <nav class="navbar navbar-expand-lg bg-warning p-3 mt-1 rounded">
        <a class="navbar-brand" href="#">ArtistFolio</a>       
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link active" href="@Url.ActionLink("Index", "Home")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active fw-bold" href="@Url.ActionLink("Index", "Artist")">Artist</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active fw-bold" href="@Url.ActionLink("Index", "Roles")">Roles</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
    <footer class="container text-center bg-warning fw-bold rounded">
        <p>&copy; 2024 www.artistfolio.com</p>
    </footer>
    <script src="~/jquery/jquery.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
   
</body>
</html>
